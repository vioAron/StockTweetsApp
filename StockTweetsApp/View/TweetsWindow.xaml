<Window x:Class="StockTweetsApp.View.FollowingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModel="clr-namespace:StockTweetsApp.ViewModel"
        Title="FollowingWindow" Height="300" Width="300"
        Loaded="FollowingWindow_OnLoaded">
    <Window.DataContext>
        <viewModel:TweetViewModel/>
    </Window.DataContext>
    <Grid>
        <DataGrid HorizontalAlignment="Stretch" Margin="5" VerticalAlignment="Stretch" ItemsSource="{Binding Tweets}"/>
    </Grid>
</Window>
